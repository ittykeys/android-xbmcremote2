<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/slidingtab_overlay_layer"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_horizontal"
    android:background="#bb000000"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/slidingtab_overlay_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="120dip"
        android:paddingBottom="10dip"></ImageView>

    <TextView
        android:id="@+id/slidingtab_overlay_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Tab Label"
        android:textColor="#ffffff"
        android:textSize="18dip"></TextView>
</LinearLayout>